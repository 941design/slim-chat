{
  "name": "slim-chat",
  "version": "0.0.14",
  "description": "Desktop app bootstrap with secure auto-updates",
  "main": "dist/main/index.js",
  "author": "markus.rother@mustwork.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/941design/slim-chat.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist out release",
    "dev:main": "tsup src/main/index.ts --format=cjs --target=node18 --out-dir=dist/main --watch --sourcemap",
    "dev:preload": "tsup src/preload/index.ts --format=cjs --target=node18 --out-dir=dist/preload --watch --sourcemap",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:app": "wait-on dist/main/index.js dist/preload/index.js http://localhost:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:dev:app\"",
    "build:main": "tsup src/main/index.ts --format=cjs --target=node18 --out-dir=dist/main --sourcemap",
    "build:preload": "tsup src/preload/index.ts --format=cjs --target=node18 --out-dir=dist/preload --sourcemap",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build": "npm run clean && npm run build:main && npm run build:preload && npm run build:renderer",
    "lint": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "npm run build && playwright test",
    "test:e2e:ui": "npm run build && playwright test --ui",
    "test:e2e:headed": "npm run build && playwright test --headed",
    "test:e2e:debug": "npm run build && playwright test --debug",
    "test:e2e:docker": "docker-compose -f docker-compose.e2e.yml up --build --abort-on-container-exit",
    "test:e2e:docker:clean": "docker-compose -f docker-compose.e2e.yml down -v && rm -rf test-results playwright-report",
    "package": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "sign:manifest": "tsc ./scripts/generate-manifest.ts --outDir ./dist --module commonjs --target ES2020 --moduleResolution node --esModuleInterop && node ./dist/scripts/generate-manifest.js"
  },
  "dependencies": {
    "@types/semver": "^7.7.1",
    "electron-log": "^5.1.4",
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/experimental-ct-react": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.15",
    "concurrently": "^8.2.2",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "playwright-core": "^1.57.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.5",
    "vitest": "^4.0.15",
    "wait-on": "^7.2.0",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": "20.x"
  },
  "build": {
    "appId": "com.example.slimchat",
    "productName": "SlimChat",
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "minimumSystemVersion": "12.0.0",
      "identity": null
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
